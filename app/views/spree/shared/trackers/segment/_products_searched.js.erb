<% if params.key?(:keywords) && params[:keywords].present? && Spree::Tracker.current(:segment) %>
  <script>
    if (typeof analytics !== 'undefined') {
      analytics.track('Products Searched', {
        query: '<%= params[:keywords] %>',
      });
      analytics.page('Products Searched', {
        query: '<%= params[:keywords] %>',
      });
    }
  </script>
<% end %>
