<% if @order.present? && order_just_completed?(@order) && Spree::Tracker.current(:segment) %>
  <% order_json = SpreeAnalyticsTrackers::Segment::OrderPresenter.call(@order).to_json %>
  <script>
    if (typeof analytics !== 'undefined') {
      analytics.track('Order Completed', <%= order_json %>);
      analytics.page('Order Completed', <%= order_json %>);
    }
  </script>
<% end %>
